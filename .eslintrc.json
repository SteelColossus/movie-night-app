{
    "env": {
        "es2021": true,
        "node": true,
        "browser": true
    },
    "extends": ["standard", "prettier"],
    "plugins": ["import", "n", "promise"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "globals": {
        "io": "readonly",
        "Chart": "readonly",
        "ClientJS": "readonly",
        "$": "readonly",
        "jQuery": "readonly",
        "jasmine": "readonly"
    },
    "rules": {
        "no-console": "off"
    },
    "overrides": [
        {
            "files": ["server/**/*.js"],
            "env": {
                "node": true,
                "browser": false
            },
            "rules": {
                "no-underscore-dangle": "off"
            }
        },
        {
            "files": ["client/**/*.js"],
            "env": {
                "browser": true,
                "node": false
            }
        },
        {
            "files": ["tests/**/*.js"],
            "env": {
                "jasmine": true,
                "node": true
            }
        }
    ]
}
